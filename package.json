{
	"name": "english-cards",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start": "node dist/index.js",
		"build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
		"dev": "nodemon -r tsconfig-paths/register --exec ts-node src/index.ts",
		"clean": "rm -rf dist",
		"migrate:create": "node-pg-migrate create --migrations-dir ./src/database/migrations",
		"migrate:up": "node-pg-migrate up --migrations-dir ./src/database/migrations",
		"migrate:down": "node-pg-migrate down --migrations-dir ./src/database/migrations"
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"cors": "^2.8.5",
		"express": "^4.21.1",
		"pg": "^8.13.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.12.0",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/node": "^22.7.5",
		"@types/node-pg-migrate": "^2.3.1",
		"@types/pg": "^8.11.10",
		"concurrently": "^9.0.1",
		"dotenv": "^16.4.5",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"globals": "^15.11.0",
		"node-pg-migrate": "^7.7.1",
		"nodemon": "^3.1.7",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.8.1"
	}
}
